<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="50" android:endColor="#d9c963" android:startColor="#b884a0" android:type="linear"/>
            <padding android:bottom="1dp" android:left="0dp" android:right="0dp" android:top="0dp"/>
            <size android:width="60dp" android:height="60dp"/>
            <stroke android:width="1dp" android:color="#0000"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="50" android:endColor="#d9c963" android:startColor="#b884a0" android:type="linear"/>
            <padding android:bottom="1dp" android:left="0dp" android:right="0dp" android:top="0dp"/>
            <size android:width="60dp" android:height="60dp"/>
            <stroke android:width="0.5dp" android:color="#b884a0"/>
        </shape>
    </item>
</selector>